<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verification Page</title>
      <!-- Boostrap CSS -->
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
       <!-- Main CSS -->
       
    <link rel="stylesheet" href="css/home.css"/>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

</head>
<body>
   
    <div class="container mt-5">

        <div class="text-center">
            <h3 class="main-text">Vote for you.</h3>
            <img src="images/flag.gif" class="img-fluid mx-auto" alt="Centered Image">

        </div>


        <div class="card">
            <div class="card-header">
                 <h4>Select your Vote! </h4>
            </div>
            <div class="card-body">
                <div onclick="selectVote(this,'Test Name of the Party 1','vote1Input')" id="vote1" class="card card-body mb-4">
                    <div class="part-selector">
                        <img src="Images/nsl.png" class="vote-image"/>
                        <h5 class="party-select">Test Name of the Party 1</h5>

                        <input id="vote1Input"  type="radio" class="form-control party-input"/>
                    </div>
                   
                </div>
                <div onclick="selectVote(this,'Test Name of the Party 2','vote2Input')" class="card card-body mb-4" id="vote2">
                    <div class="part-selector">
                        <img src="Images/nsl.png" class="vote-image"/>
                        <h5 class="party-select">Test Name of the Party 2</h5>

                        <input id="vote2Input"type="radio" class="form-control party-input"/>
                    </div>
                   
                </div>


                <div onclick="selectVote(this,'I\'ll skip','noneInput')" class="card card-body mb-4" id="none">
                    <div class="part-selector">
                        <img src="Images/remove.png" style="width: 70px;
                        height: 70px;
                        margin-left: 20px;"/>
                        <h5 class="party-select">I'll skip voting</h5>

                        <input id="noneInput"type="radio" class="form-control party-input"/>
                    </div>
                   
                </div>
            </div>

            <div class="text-center">
                <button onclick="submitVote()" class="btn btn-danger">Complete Vote</button>
            </div>
        </div>



    </div>

    </script>
    <!-- Boostrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script>
        const className = "vote-box-selected";

        function selectVote(e,value,input){
            var result = window.confirm("Do you want to select the vote for " + value + " ? " );

            if (result) {
                clearVotes();

                e.classList.add("vote-box-selected");
                document.getElementById(input).checked  = true;
            } 

           
        }

        function clearVotes(){
            const elements = document.getElementsByClassName(className);
            const elementsArray = Array.from(elements);

            elementsArray.forEach(element => {
                element.classList.remove(className);
            });

            const radioButtons = document.querySelectorAll(`input[type="radio"]`);

            radioButtons.forEach(radioButton => {
                radioButton.checked = false;
            });
        }

        function submitVote(){
            var result = window.confirm("Submitting your vote :" );

            if (result) {
                alert("Thanks for voting");
            }

        }
    </script>
</body>
</html>